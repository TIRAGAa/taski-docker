version: '3'

volumes:
  pg_data:
  static:
  media:

services:
  db:
    image: postgres:13
    env_file: .env
    volumes:
      - pg_data:/var/lib/postgresql/data
  backend:
    image: tiraga/kittygram_backend
    env_file: .env
    volumes:
      - static:/backend_static
      - media:/app/media
  frontend:
    env_file: .env
    image: tiraga/kittygram_frontend
    volumes:
      - static:/static/
  gateway:
    image: tiraga/kittygram_gateway
    env_file: .env
    volumes:
      - static:/static/
      - media:/media/
    ports:
      - 9000:80




volumes:
  pg_data:
  static:
  media:

services:
  kittygram:
    image: postgres:13.10
    env_file: .env
    volumes:
      - pg_data:/var/lib/postgresql/data
  backend:
    image: tiraga/kittygram_backend
    env_file: .env
    volumes:
      - statiс:/kittygram_static
      - media:/app/media
  frontend:
    image: tiraga/kittygram_frontend  # Качаем с Docker Hub
    env_file: .env
    command: cp -r /app/build/. /static/
    volumes:
      - static:/static
  gateway:
    image: tiraga/kittygram_gateway  # Качаем с Docker Hub
    env_file: .env
    volumes:
      - static:/static
      - media:/media
    ports:
      - 9000:80